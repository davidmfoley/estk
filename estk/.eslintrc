    "sourceType": "module",
    "allowImportExportEverywhere": true,
  },
  "rules": {
    "flowtype/define-flow-type": 1
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "plugins": ["flowtype"],
  "extends": "eslint:recommended",
}
