#! /bin/bash
DIR=$( cd "$( dirname "$0" )" &&  pwd )
cd $DIR/..

DIRS=(
  estk-pg \
  estk-events \
  estk-events-in-memory \
  estk-events-pg \
  estk-snapshots \
  estk-snapshots-pg \
  estk-read-models \
  estk-read-models-pg \
  estk-amqp-connector \
)

for dir in ${DIRS[@]}
do
  echo
  echo "**** $dir"
  echo "$@"

  cd $dir
  [ -f ./package.json ] && bash -c "$@"
  cd ..
done
